.heading {
  margin: 0 0 64px;
  letter-spacing: 4px;
}

.heading_variant_h1 {
  font-size: 64px;
  line-height: 1.3;
}

.heading_variant_h2 {
  font-size: 48px;
  line-height: 1.3;
}

.heading_variant_h3 {
  font-size: 36px;
  line-height: 1.1;
}

.heading_variant_h4 {
  font-size: 18px;
  line-height: 1.2;
}

.heading_variant_p {
  font-size: 32px;
  line-height: 1.2;
}

.heading_weight_normal {
  font-weight: 400;
}

.heading_weight_bold {
  font-weight: 700;
}
