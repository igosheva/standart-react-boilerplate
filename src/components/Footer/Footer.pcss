.footer {
  box-sizing: border-box;
  font-size: 18px;
  line-height: 1.1;
}

.footer__container {
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;
  padding-top: 32px;
  padding-bottom: 32px;
}

.footer__text {
  margin: 0;
}

.footer__link {
  color: inherit;
  text-decoration: none;
}

@media (pointer: fine) {
  .footer__link:hover {
    text-decoration: underline;
  }
}
